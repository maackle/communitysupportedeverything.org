extends 'layout/base.jade'

block title
  | Community Supported Everything · Portland, Oregon

block navbar
  nav#navigation.fixed-top
    .container
      .row-fluid
        .span12.center
          a.brand.pull-left(href='./')
            img(src='static/images/logo.png', alt='Community Supported Everything Logo')
          .mobile-menu(data-toggle='collapse', data-target='.nav-collapse')
          ul#main-menu.nav-collapse.collapse
            li
              a(href='#page-welcome') Home
            li
              a(href='#page-work') Vision
            li
              a(href='#page-features') Program
            li
              a(href='#page-about') Who We Are
            li
              a(href='#page-blog') Projects
            li
              a(href='#page-contact') Contact
          .social-icons.hover-big.pull-right
            a.sicon-facebook(href='https://www.facebook.com/CommunitySupportedEverything')
              i Facebook

block append main_content
  
  footer#credits
    ul.list-unstyled
      li
        | Site by
        a(href='http://seegodesign.com') Cameron Gaut (Seego Design)
        | ·
        a(href='#') Michael Dougherty
        | ·
        a(href='#') Shane Stranahan

